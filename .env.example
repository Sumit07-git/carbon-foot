# ============================================================================
# CARBON FOOTPRINT MONITOR - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and update values for your environment
# ============================================================================

# ============================================================================
# FLASK SERVER CONFIGURATION
# ============================================================================

# Flask environment (development, production, testing, staging)
FLASK_ENV=development

# Flask app module
FLASK_APP=app.py

# Flask debug mode (True for development, False for production)
FLASK_DEBUG=True

# Server host (0.0.0.0 = accessible from anywhere)
FLASK_HOST=0.0.0.0

# Server port
FLASK_PORT=5000

# Secret key for session management (change this in production!)
SECRET_KEY=dev-secret-key-change-in-production-to-something-secure

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Path to emissions database file
DATABASE_FILE=data/emissions.json

# Database backup directory
BACKUP_DIR=backups/

# ============================================================================
# MACHINE LEARNING CONFIGURATION
# ============================================================================

# Path to ML model file
MODEL_PATH=models/emission_model.pkl

# Number of days to predict ahead
DEFAULT_PREDICTION_DAYS=30

# Minimum records needed to train ML model
MIN_RECORDS_FOR_PREDICTION=5

# ML Model hyperparameters
ML_N_ESTIMATORS=100
ML_LEARNING_RATE=0.1
ML_MAX_DEPTH=5
ML_SUBSAMPLE=0.8
ML_RANDOM_STATE=42

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins for CORS (comma-separated for production)
# Development: use *
# Production: use specific domains like https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Maximum content length for uploads (in bytes)
MAX_CONTENT_LENGTH=16777216

# API prefix
API_PREFIX=/api

# Enable API documentation
API_DOCS_ENABLED=True

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Enable HTTPS only (set to True in production)
REQUIRE_HTTPS=False

# Session cookie secure flag
SESSION_COOKIE_SECURE=False

# Session cookie HTTP only
SESSION_COOKIE_HTTPONLY=True

# Session cookie same site policy (Lax, Strict, None)
SESSION_COOKIE_SAMESITE=Lax

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/app.log

# Console logging enabled
CONSOLE_LOGGING=True

# File logging enabled
FILE_LOGGING=True

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache type (simple, redis, memcached)
CACHE_TYPE=simple

# Cache default timeout (in seconds)
CACHE_DEFAULT_TIMEOUT=300

# Redis URL (if using Redis cache)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================

# Enable rate limiting
RATELIMIT_ENABLED=False

# Rate limit storage URL
RATELIMIT_STORAGE_URL=memory://

# Default rate limit (e.g., 100/hour)
RATELIMIT_DEFAULT=100/hour

# ============================================================================
# EXPORT CONFIGURATION
# ============================================================================

# Export formats (json, csv, pdf)
EXPORT_FORMATS=json,csv

# Maximum records to export
MAX_EXPORT_RECORDS=10000

# Export directory
EXPORT_DIR=exports/

# ============================================================================
# MAIL CONFIGURATION (Optional - for future email notifications)
# ============================================================================

# Mail server
MAIL_SERVER=smtp.gmail.com

# Mail port
MAIL_PORT=587

# Mail use TLS
MAIL_USE_TLS=True

# Mail username
MAIL_USERNAME=your-email@example.com

# Mail password
MAIL_PASSWORD=your-app-password

# Mail sender
MAIL_SENDER=noreply@carbonmonitor.com

# ============================================================================
# DATABASE CONNECTION (For future SQL integration)
# ============================================================================

# SQLite database URI (for development)
DATABASE_URL=sqlite:///emissions.db

# PostgreSQL database URI (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/carbon_monitor

# ============================================================================
# AWS CONFIGURATION (Optional - for cloud deployment)
# ============================================================================

# AWS region
AWS_REGION=us-east-1

# AWS access key
AWS_ACCESS_KEY_ID=your-aws-access-key

# AWS secret access key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 bucket name
S3_BUCKET_NAME=carbon-monitor-backups

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable user authentication
ENABLE_AUTH=False

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=False

# Enable advanced analytics
ENABLE_ADVANCED_ANALYTICS=True

# Enable dark mode
ENABLE_DARK_MODE=True

# ============================================================================
# PAGINATION
# ============================================================================

# Items per page
ITEMS_PER_PAGE=20

# Max items per page
MAX_ITEMS_PER_PAGE=100

# ============================================================================
# TIMEZONE
# ============================================================================

# Timezone (e.g., UTC, US/Eastern, Europe/London)
TIMEZONE=UTC

# ============================================================================
# END OF CONFIGURATION
# ============================================================================